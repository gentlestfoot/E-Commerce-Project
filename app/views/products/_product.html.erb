<a href="<%= product_url(product.id) %>" class="group">
  <div class="card mb-3" style="width: 20rem;">
    <% if product.image.present? %>
      <%= image_tag product.image, class: "card-img-top" %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= product.name %></h5>
    </div>
  </div>
</a>

